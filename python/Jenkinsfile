pipeline {
    agent { docker { image 'python:3.10.1-alpine' } }

    stages {
        stage('version') {
            steps {
                sh 'python --version'
            }
        }
        stage('unit') {
            steps {
                sh 'id'
                sh 'pwd'
                sh 'pip install --user --no-cache-dir pytest'
                sh 'python -m pytest tests'
            }
        }
    }
}
